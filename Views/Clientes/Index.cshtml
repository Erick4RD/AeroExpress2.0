@model IEnumerable<AerolineaExpress.Models.Clientes>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create">Nuevo Cliente</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destino)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MetodoDePago)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroDeCuenta)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.confimarVuelo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellidos)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Destino)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MetodoDePago)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroDeCuenta)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.confimarVuelo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ClientesId">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.ClientesId">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.ClientesId">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
